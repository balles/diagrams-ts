{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "CommonJS",
    "target": "es2015",
    "strict": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "packages/graphviz-ts/graph"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "examples/**/*",
    "packages/diagrams-ts/scripts/**/*"
  ]
}
